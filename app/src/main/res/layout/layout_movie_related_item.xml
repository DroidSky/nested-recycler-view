<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/margin_size_default">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/related_item_height"
        android:layout_margin="@dimen/margin_size_default">

        <ImageView
            android:id="@+id/movie_related_thumbnail"
            android:layout_width="@dimen/related_thumbnail_width"
            android:layout_height="@dimen/related_thumbnail_height"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/comedy_mistress_america"/>

        <TextView
            android:id="@+id/movie_related_name"
            android:layout_width="@dimen/related_thumbnail_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_related_thumbnail"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingTop="@dimen/padding_size_small"
            android:text="@string/movie_default_name"
            android:textColor="@color/grey"
            android:textSize="@dimen/default_text_size"
            android:textStyle="bold"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>